<% if signed_in? %>
	<div class="row">
		<aside class="span4">
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/micropost_form' %>
			</section>
    	</aside>
    	<div class="span8">
			<h3>Tweets</h3>
			<%= render 'shared/feed' %>
		</div>
  	</div>
<% else %>
	<div class="center hero-unit">
		<h1>Bienvenido a MiniTweet</h1>
				<p>
					Pagina de inicio de MiniTweet. Desarrollado por <a href="http://www.visionartech.net">VisionAR</a>.
				</p>
		<%= link_to "Registrate!", signup_path, class: "btn btn-large btn-primary" %>
	</div>

	<%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
<% end %>