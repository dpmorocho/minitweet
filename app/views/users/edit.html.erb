<% provide(:title, "Editar Usuario") %>
	<h1>Actualizar Perfil</h1>
		<div class="row">
			<div class="span6 offset3">
				<%= form_for(@user) do |f| %>
				<%= render 'shared/error_messages', object: f.object %>
				<%= f.label :name, "Nombre" %>
				<%= f.text_field :name %>
				<%= f.label :email, "Email" %>
				<%= f.text_field :email %>
				<%= f.label :password, "Clave" %>
				<%= f.password_field :password %>
				<%= f.label :password_confirmation, "Confirmar Clave" %>
				<%= f.password_field :password_confirmation %>
				<%= f.submit "Guardar Cambios", class: "btn btn-large btn-primary" %>
				<% end %>
				<%= gravatar_for (@user) %>
				<a href="http://gravatar.com/emails">Cambiar Avatar</a>
			</div>
		</div>